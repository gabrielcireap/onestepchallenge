<table class="border-spacing-2">
  <thead>
  <tr>
    <th>Item</th>
    <th></th>
    <th>Board Name</th>
    <th>User Email</th>
    <th>Created At</th>
  </tr>
  </thead>
  <tbody>
  <% @games.each_with_index do |game, index| %>
    <tr>
      <td class="p-1">
        <%= index + 1 %>
      </td>
      <td class="p-2"></td>
      <td class="p-1">
        <%= link_to game.name, game, class: 'underline' %>
      </td>
      <td class="p-1">
        <%= game.email %>
      </td>
      <td class="p-1">
        <%= local_time(game.created_at, :long) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>