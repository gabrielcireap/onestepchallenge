<div class="flex flex-col gap-y-1">
  <% board.each { |row| %>
    <div class="flex gap-x-1">
      <% row.each { |element| %>
        <% if element == 1%>
          <%= image_tag 'bomb.svg', size: '20x20', alt: 'bomb-icon' %>
        <% else %>
          <div class="rounded-lg bg-gray-100" style="width: 20px; height: 20px;"></div>
        <% end %>
      <% } %>
    </div>
  <% } %>
</div>