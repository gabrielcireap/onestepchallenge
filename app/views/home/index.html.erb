<%= form_with url: 'games', method: :post do |form| %>
  <div class="flex flex-col">
    <div>
      <%= form.label :email, "Email:" %>
      <%= form.text_field :email %>
    </div>
    <div>
      <%= form.label :width, "Board Width:" %>
      <%= form.number_field :width, in: 1...-1, step: 1 %>
    </div>
    <div>
      <%= form.label :height, "Board Height:" %>
      <%= form.number_field :height, in: 1...-1, step: 1 %>
    </div>
    <div>
      <%= form.label :name, "Board Name:" %>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.label :mines, "Number of mines: " %>
      <%= form.number_field :mines, in: 1...-1, step: 1 %>
    </div>
    <%= form.submit "Generate Board" %>
  </div>
<% end %>
